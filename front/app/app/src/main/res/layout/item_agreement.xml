<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Sección de Fecha -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/circle_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Fecha de la cita"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvAppointmentDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="14-12-2024 15:14:123"
            android:layout_marginBottom="16dp"
            android:textSize="14sp" />

        <!-- Lugar de la cita -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/circle_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Lugar de la cita"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvAppointmentLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="El la dirección del cliente"
            android:layout_marginBottom="16dp"
            android:textSize="14sp" />

        <!-- Cliente -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/circle_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Cliente"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvAppointmentCustomerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jach1"
            android:layout_marginBottom="16dp"
            android:textSize="14sp" />

        <!-- Contacto con el cliente -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/circle_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Contacto con el cliente"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvAppointmentCustomerContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7712276783"
            android:layout_marginBottom="16dp"
            android:textSize="14sp" />

        <!-- Descripción del servicio -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/circle_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Descripción del servicio"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvAppointmentServiceDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Es una descripción normal"
            android:layout_marginBottom="16dp"
            android:textSize="14sp" />

        <!-- Estado actual -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/circle_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Estado actual"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvAppointmentCurrentStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agendado"
            android:layout_marginBottom="8dp"
            android:textSize="14sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
