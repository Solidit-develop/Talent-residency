<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApointmentFlow.Appointment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:padding="16dp"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/progressBarOnConfirmAppointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tvHeaderAppointmentDate"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_margin="16dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Selecciona un día para solicitar una cita"
            />

        <CalendarView
            android:id="@+id/claendarAppintment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHeaderAppointmentDate"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/textViewHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccione una hora para su cita"
            android:layout_below="@id/claendarAppintment"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="25dp"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/buttonSeleccionarHora"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textViewHora"
            android:layout_height="wrap_content"
            android:text="Seleccionar hora" />

        <EditText
            android:id="@+id/etAppointmentLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresa la ubicación"
            android:layout_below="@id/buttonSeleccionarHora"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            />


        <Button
            android:id="@+id/btnConfirmarCita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="15dp"
            android:text="Confirmar cita" />



    </RelativeLayout>
</FrameLayout>