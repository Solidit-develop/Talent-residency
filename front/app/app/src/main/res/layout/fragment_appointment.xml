<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApointmentFlow.Appointment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvHeaderAppointmentDate"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:text="Selecciona un dÃ­a para solicitar una cita"
            />

        <CalendarView
            android:id="@+id/claendarAppintment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHeaderAppointmentDate"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tvHeaderAppointmentHour"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/claendarAppintment"
            android:text="Selecciona una hora para solicitar una cita"
            />

        <TextView
            android:id="@+id/textViewHora"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHeaderAppointmentHour"
            android:text="Hora seleccionada"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/buttonSeleccionarHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewHora"
            android:layout_centerHorizontal="true"
            android:text="Seleccionar Hora" />



        <Button
            android:id="@+id/btnConfirmarCita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Confirmar cita" />



    </RelativeLayout>
</FrameLayout>