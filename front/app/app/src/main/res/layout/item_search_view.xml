<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:elevation="1dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        >
        <ImageView
            android:id="@+id/imgSearchView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@mipmap/ic_conectapp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:id="@+id/tvWorkshopNameFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="ConstruiccionesGod"
            android:layout_below="@+id/imgSearchView"
            />

        <TextView
            android:id="@+id/tvWorkshopPhoneFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1231231212"
            android:layout_below="@+id/tvWorkshopNameFound"
            />
        <LinearLayout
            android:id="@+id/llSkillsFound"
            android:layout_width="match_parent"
            android:layout_below="@+id/tvWorkshopPhoneFound"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/skillsFound"
                android:text="HerrerÃ­ua, Plomeria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>