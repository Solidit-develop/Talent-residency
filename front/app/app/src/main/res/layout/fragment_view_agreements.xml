<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApointmentFlow.ViewAgreements.ObtainAgreements">

    <TextView
        android:id="@+id/itemNoAgreementView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aun no se ha generado nignun acuerdo"
        android:layout_gravity="center"
        android:visibility="gone"
        />
    <ProgressBar
        android:id="@+id/progressBarOnUpdateAgreements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis acuerdos"
            style="@style/Title"
            android:padding="8dp"
            android:layout_gravity="center"
            />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListAgreements"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_agreement"
        android:visibility="gone"
        />

    </LinearLayout>

</FrameLayout>