<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">
    <!--  **********************************  Cajas de Texto  ********************************************************  -->
    <!--  Caja de textoLayout normal y  EditTextNormal-->
    <style name="BoxTextLayoutNormal" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="EditTextNormal" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!--  Caja de textoLayout small y EditTextSmall -->
    <style name="BoxTextLayoutSmall" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="boxStrokeColor">#008EFF</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="EditTextSmall" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--Layout para texto extendido y auto completado de texto-->
    <style name="TextExtendLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="endIconMode">dropdown_menu</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>

    </style>

    <style name="AutoCompleteText" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:inputType">none</item>
        <item name="android:focusable">false</item>
    </style>

    <!-- *********************************  Estilos de botones  ***************************************************** -->

    <!-- Boton Normal sin icono-->
    <style name="ButtonNormal" parent="Widget.Material3.Button">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/txt_btn_white</item>
        <item name="backgroundTint">@color/bg_btn_grey</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:translationZ">7dp</item>
    </style>

    <!-- Boton con icono al final del texto -> -->
    <style name="ButtonIconEnd" parent="Widget.Material3.Button.IconButton">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/txt_btn_white</item>
        <item name="backgroundTint">@color/bg_btn_grey</item>
        <item name="iconSize">20sp</item>
        <item name="iconPadding">8dp</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconTint">@null</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:translationZ">7dp</item>
    </style>

    <!-- Boton con el icono al inicio -->
    <style name="ButtonIconStart" parent="Widget.Material3.Button.IconButton">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/txt_btn_white</item>
        <item name="backgroundTint">@color/bg_btn_grey</item>
        <item name="iconSize">20sp</item>
        <item name="iconPadding">8dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@null</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:translationZ">7dp</item>
    </style>

    <!-- Boton con puro texto -->
    <style name="ButtonText" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bg_btn_grey</item>
    </style>


    <!-- ********************************** Estilos de Titulos y subtitulos ******************************************* -->
    <style name="Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/Title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item> <!-- Color opcional -->
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Subtitle1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/subtitle1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#666666</item> <!-- Color opcional -->
    </style>

    <style name="Subtitle2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/link</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#666666</item> <!-- Color opcional -->
    </style>

    <!-- *********************************  Botones estilo links  *******************************************88 -->
    <style name="Link">
        <item name="android:textSize">@dimen/link</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#0F1638</item>
    </style>

    <style name="MenuTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">#D21B1B1B</item>
        <item name="colorPrimaryVariant">#D2717171</item>
        <item name="colorOnPrimary">#D2101010</item>
        <item name="colorSecondary">#1FFF0000</item>
    </style>


    <!--******************************  Filled text field  *********************************************************-->

    <style name="FilledTextField" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxStrokeColor">@color/dark_normal</item>
        <item name="hintTextColor">@color/bg_white</item>
        <item name="android:textColorHint">@color/bg_white</item>
        <item name="android:textColor">@color/bg_white</item>
        <item name="endIconMode">custom</item>
        <item name="endIconTint">@color/bg_white</item>
    </style>

    <style name="TextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bg_white</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionOverflowButtonStyle">@style/CustomOverflowButtonStyle</item>
    </style>
    <style name="CustomOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/settings</item>
    </style>

</resources>